{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "lib": [
            "ES2020"
        ],
        "outDir": "./dist",
        "rootDir": "./",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true
    },
    "include": [
        "models/**/*",
        "interfaces/**/*",
        "config/**/*",
        "routes/**/*",
        "controllers/**/*",
        "seeders/**/*",
        "server.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}